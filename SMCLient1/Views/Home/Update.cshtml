@model SMCLient1.Models.Student

@{Html.BeginForm(); }
<div class="form-group">
    @Html.LabelFor(m => m.StudentId)
    @Html.TextBoxFor(m => m.StudentId, new { @class = "form-control" })
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Name)
    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
</div>
<div class="form-group">
    @Html.LabelFor(m => m.BirthDay)
    @Html.EditorFor(m => m.BirthDay, new { htmlAttributes = new { @class = "form-control" } })

</div>
<div class="form-group">
    @Html.LabelFor(m => m.Gender)
    @Html.EditorFor(m => m.Gender, new { htmlAttributes = new { @class = "form-control" } })

</div>
<div class="form-group">
    @Html.LabelFor(m => m.Email)
    @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control" } })

</div>
<div class="form-group">
    @Html.LabelFor(m => m.Desciption)
    @Html.EditorFor(m => m.Desciption, new { htmlAttributes = new { @class = "form-control" } })

</div>
<div>
    <input type="submit" name="Submit" value="Save" />
</div>
@{Html.EndForm();}
